/* pages/home/home.wxss */
.image-container {
  display: flex;
  justify-content: space-evenly;
  margin: 0 auto;
  flex-wrap: wrap;
  margin-bottom: 20px;
}

.image-container::after {
  content: "";
  width: 300rpx;
}

.image-wrapper {
  width: 300rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.img-description {
  font-weight: 500;
  margin-top: 5rpx;
}

.image-wrapper image {
  width: 100%;
  height: 300rpx;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
}
