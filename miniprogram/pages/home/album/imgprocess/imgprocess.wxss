/* pages/home/album/album.wxss */
.album-image-container {
  display: grid;
  grid-template-columns: repeat(1, 60%);
  margin: 0 auto;
  margin-bottom: 20px;
  justify-content: space-evenly;
  padding: 0 32px;
}

.album-image-wrapper {
  text-align: center;
  margin-bottom: 3rpx;
}

.album-img-inner {
  position: relative;
  height: 0;
  padding-top: 100%;
  margin-bottom: 20px;
}

.album-image-wrapper image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
}
