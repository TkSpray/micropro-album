<!-- pages/home/create/create.wxml -->
<view class="page" data-weui-theme="{{theme}}">
  <view class="weui-form">
    <view class="weui-form__text-area">
      <h2 class="weui-form__title">水印添加</h2>
    </view>
    <view class="weui-form__control-area"></view>
    <view class="weui-form__opr-area">
      <view class=".album-image-container">
        <view class="album-image-wrapper">
          <view bindtap="previewImage" data-src="{{src}}" class="album-img-inner">
            <image src="{{src}}" mode="aspectFill" />
          </view>
        </view>
      </view>
      <a class="weui-btn weui-btn_primary self-btn" bindtap="confirm">确定</a>
    </view>
  </view>
</view>